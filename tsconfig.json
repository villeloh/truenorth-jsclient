{
    "compilerOptions": {
        "outDir": "./www/scripts",
        "allowJs": true,
        "target": "es5",
		"module": "amd",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"suppressImplicitAnyIndexErrors": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2015", "dom"]
    },
    "include": [
        "./www/**/*",
		"typings/*.d.ts"
    ],
	"exclude": [
		"node_modules",
		"./www/scripts"
	]
}